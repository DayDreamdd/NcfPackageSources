<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<!--<TargetFramework>net5.0</TargetFramework>-->
		<!--<RazorLangVersion>2.0</RazorLangVersion>-->
		<GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>
		<DocumentationFile>../Senparc.Web/App_Data/ApiDocXML/Senparc.Xncf.PromptRange.XML</DocumentationFile>
		<Configurations>Debug;Release;Debug-Dapr</Configurations>
		<Version>0.1</Version>
		<AssemblyName>Senparc.Xncf.PromptRange</AssemblyName>
		<RootNamespace>Senparc.Xncf.PromptRange</RootNamespace>

		<GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>
		<Description>你的提示词（Prompt）训练场</Description>
		<Copyright>Senparc</Copyright>
		<PackageTags>Senparc,NeuCharFramework,NCF,Senparc.Xncf.PromptRange</PackageTags>
		<Authors>Senparc</Authors>
		<Owners>Senparc</Owners>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<Title>提示词靶场</Title>
		<!--<ProjectUrl> https://github.com/NeuCharFramework/NCF</ProjectUrl>
    <PackageProjectUrl>https://github.com/NeuCharFramework/NcfPackageSources</PackageProjectUrl>-->
		<PackageIcon>icon.jpg</PackageIcon>
		<PackageReleaseNotes>
			v0.1 创世
		</PackageReleaseNotes>
		<RepositoryUrl>https://github.com/NeuCharFramework/NcfPackageSources</RepositoryUrl>
		<Configurations>Debug;Release;Test;TemplateRelease</Configurations>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
		<OutputPath>..\..\..\BuildOutPut</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<!--<FrameworkReference Include="Microsoft.AspNetCore.App" />-->

		<EmbeddedResource Include="wwwroot\**\*" />
		<PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Authorization" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="6.0.0" />
	</ItemGroup>


	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.0.0" />
		<PackageReference Include="Senparc.AI.Kernel" Version="0.3.1-beta1" />
		<PackageReference Include="Senparc.Ncf.AreaBase" Version="0.11.6-beta10" />
		<PackageReference Include="Senparc.Ncf.XncfBase" Version="0.11.8-beta10" />

		<!-- 为解决 VS 2019 v16.8 的一个bug，需要添加下方引用 -->
		<!--<PackageReference Include="Microsoft.NET.Sdk.Razor" Version="3.1.10" />-->
		<PackageReference Include="Senparc.Xncf.AreasBase" Version="0.2.6-beta10" />
		<PackageReference Include="Senparc.Xncf.SystemCore" Version="0.3.6-beta10" />
		<PackageReference Include="Senparc.Xncf.SystemManager" Version="0.3.6-beta10" />
		<PackageReference Include="Senparc.Xncf.XncfModuleManager" Version="0.3.6-beta10" />
		<PackageReference Include="Senparc.Xncf.Tenant" Version="0.3.6-beta10" />
	</ItemGroup>
</Project>
